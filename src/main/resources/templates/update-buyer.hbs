{{#partial "content"}}

    {{#if editBuyer}}
        <h1>Edit your  Profile:</h1>
        <h1> {{ editBuyer.id }} </h1>

        <form action="/buyers/{{ editBuyer.id }}/update" method="post">

            <label for="name">Edit your name:</label>
            <input id="name" name="name" type="text" value="{{ editBuyer.name}}" placeholder="new seller name" >
            <br>
            <label for="address">Edit Address:</label>
            <input id="address" name="address" type="text" value="{{ editBuyer.address}}" placeholder="new address" >
            <br>
            <label for="email">Edit Email:</label>
            <input id="email" name="email" type="text" placeholder="new Email" >
            <br>
            <label for="dietaryPreference">Edit your products dietary preference:</label>
            <input id="dietaryPreference" name="dietaryPreference" type="text" value="{{ editBuyer.dietaryPreference}}"placeholder="new dietary preferences" >
            <br>
            <label for="email">Edit email:</label>
            <input id="email" name="email" type="text" value="{{ editBuyer.email}}" placeholder="new goods category" >
            <br>
            <button type="submit" class="btn btn-default">Edit!</button>
        </form>

    {{else}}

        <h1></h1>

    {{/if}}
    <br>

{{/partial}}

{{> layout.hbs}}